{
    "buildCommand": "npm run build:all",
    "outputDirectory": "dist",
    "installCommand": "npm install && cd admin_ui && npm install",
    "rewrites": [
        {
            "source": "/secret",
            "destination": "/secret/index.html"
        },
        {
            "source": "/secret/login",
            "destination": "/secret/index.html"
        },
        {
            "source": "/secret/dashboard",
            "destination": "/secret/index.html"
        },
        {
            "source": "/secret/(.*)",
            "destination": "/secret/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/secret/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
